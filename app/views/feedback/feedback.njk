{% from "back-link/macro.njk" import govukBackLink %}

{% extends "layout.njk" %}

{% set backLink = withData(referrer or '/') %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: backLink
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
      <h1 class="govuk-heading-xl">
        Provide feedback about this service
      </h1>
      <p>
        If you would like to report a problem, give feedback or suggest an improvement to this service, please contact:
        <br/>
        {# TODO update this email address once the correct email address has been confirmed #}
        {% set feedbackEmailAddress = "feedback@example.com" %}
        <strong>
          <a href="mailto:{{ feedbackEmailAddress }}?subject=Feedback%20on%20Shared%20Parental%20Leave%20and%20Pay%20eligibility%20checker">
            {{ feedbackEmailAddress }}
          </a>
        </strong>
      </p>
    </div>
    <div class="govuk-grid-column-two-thirds-from-desktop">
      <a href="{{ backLink }}" class="govuk-button">
        Return to service
      </a>
    </div>
  </div>
{% endblock %}
