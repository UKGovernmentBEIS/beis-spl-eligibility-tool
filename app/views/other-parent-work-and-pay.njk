{% from "hidden-fields/macro.njk" import appendHiddenFields %}
{% from "back-link/macro.njk" import govukBackLink %}
{% from "radios/macro.njk" import govukRadios %}
{% from "button/macro.njk" import govukButton %}
{% from "error-summary/macro.njk" import govukErrorSummary %}

{% from "components/date-explanation-hint.njk" import dateExplanationHint %}

{% extends "layout.njk" %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: withData("work-and-pay/" + currentParentFromUrl)
  }) }}
{% endblock %}

{% block content %}
  {% if errors | length > 0 %}
    {{ govukErrorSummary({
      titleText: "There is a problem",
      errorList: [
        errors["other-parent-work"],
        errors["other-parent-pay"]
      ]
    }) }}
  {% endif %}

  {% set currentParentName = data | currentParentName(currentParent) %}
  {% set otherParentName = data | otherParentName(currentParent) %}
  {% set relevantWeek = data | relevantWeek %}

  {% set otherParentWorkTitle %}
    {% if (data | isAdoption) %}
      Did the {{ otherParentName }} work (or will they have worked) for at least
      26 weeks during the 66 weeks ending with your placement date?
    {% else %}
      {% if (relevantWeek | isInPast) %}
        Did the {{ otherParentName }} work
      {% else %}
        Will the {{ otherParentName }} have worked
      {% endif %}
      for at least 26 weeks between
      {{ relevantWeek | offsetWeeks(-66) | formatForDisplay }}
      and {{ relevantWeek | formatForDisplay }}?
    {% endif %}
  {% endset %}

  {% set otherParentPayTitle %}
    {% if (data | isAdoption) %}
      Did the {{ otherParentName }} earn (or will they have earned) a total of £390
      or more in any 13 weeks during the 66 weeks ending with your placement date?
    {% else %}
      {% if data | relevantWeek | isInPast %}
        Did the {{ otherParentName }} earn
      {% else %}
        Will the {{ otherParentName }} have earned
      {% endif %}
      a total of £390 or more over 13 weeks between
      {{ relevantWeek | offsetWeeks(-66) | formatForDisplay }}
      and {{ relevantWeek | formatForDisplay }}?
    {% endif %}
  {% endset %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">
        <span class="govuk-caption-xl">
          {{ currentParentName | capitalize }}’s eligibility
        </span>
        {{ otherParentName | capitalize }}’s work and pay
      </h1>
      {{ dateExplanationHint(data) }}
      <form method="POST">
        {% call appendHiddenFields(data) %}
          {{ govukRadios({
            classes: "govuk-radios",
            idPrefix: "other-parent-work",
            name: currentParent + "[other-parent-work]",
            fieldset: {
              legend: {
                text: otherParentWorkTitle,
                isPageHeading: true,
                classes: "govuk-fieldset__legend--m"
              }
            },
            errorMessage: errors["other-parent-work"],
            hint: {
              text: "The 26 weeks do not need to be consecutive. They can be full or partial weeks."
            },
            items: [
              {
                value: "yes",
                text: "Yes",
                checked: data[currentParent]["other-parent-work"] === "yes"
              },
              {
                value: "no",
                text: "No",
                checked: data[currentParent]["other-parent-work"] === "no"
              }
            ]
          }) }}
          {{ govukRadios({
            classes: "govuk-radios",
            idPrefix: "other-parent-pay",
            name: currentParent + "[other-parent-pay]",
            fieldset: {
              legend: {
                text: otherParentPayTitle,
                isPageHeading: true,
                classes: "govuk-fieldset__legend--m"
              }
            },
            errorMessage: errors["other-parent-pay"],
            hint: {
              text: "The 13 weeks do not need to be consecutive."
            },
            items: [
              {
                value: "yes",
                text: "Yes",
                checked: data[currentParent]["other-parent-pay"] === "yes"
              },
              {
                value: "no",
                text: "No",
                checked: data[currentParent]["other-parent-pay"] === "no"
              }
            ]
          }) }}
          {{ govukButton({
            text: "Continue"
          }) }}
        {% endcall %}
      </form>
    </div>
  </div>

{% endblock %}
