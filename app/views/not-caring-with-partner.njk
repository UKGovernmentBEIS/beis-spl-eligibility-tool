{% extends 'layout.njk' %}
{% from "back-link/macro.njk" import govukBackLink %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: backPath()
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
      <h1 class="govuk-heading-xl">
        Not eligible for shared parental leave and pay
      </h1>
      <p>
        To be eligible for shared parental leave and pay the {{ data | primaryName }} must share responsibility for the child from birth with a partner.
      </p>

      <p>The partner is one of the following:</p>
      <ul class="govuk-list govuk-list--bullet">
        <li>the {{ data | primaryName }}’s husband, wife or civil partner</li>
        <li>the {{ "child’s other parent" if data | isBirth else "secondary adopter" }}</li>
        <li>the {{ data | primaryName }}’s partner (if they live with the mother and the child)</li>
      </ul>

      {% if data | isBirth %}
        <p>
        {# TODO check the href of this link #}
          You can read more about the shared parental leave and pay <a href="https://www.gov.uk/shared-parental-leave-and-pay/eligibility-for-birth-parents">eligiblity rules</a>.
        </p>

        <p>
          You might still be eligibile for:
        </p>
        <ul class="govuk-list govuk-list--bullet">
          <li>maternity leave and pay</li>
          <li>maternity allowance</li>
        </ul>

        <p>
          <a href="https://www.gov.uk/pay-leave-for-parents">Check if you can get these types of leave and pay</a>
        </p>
      {% else %}
        <p>
        {# TODO check the href of this link #}
          You can read more about the shared parental leave and pay <a href="https://www.gov.uk/shared-parental-leave-and-pay/eligibility-for-adopters">eligiblity rules for adopters</a>.
        </p>
        <p>
        {# TODO check the href of this link #}
          You might still be eligible for <a href="https://www.gov.uk/adoption-pay-leave">adoption leave and pay</a>.
        </p>
      {% endif %}
    </div>
  </div>
{% endblock %}