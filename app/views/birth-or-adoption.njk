{% from "radios/macro.njk" import govukRadios %}
{% from "button/macro.njk" import govukButton %}
{% from "error-summary/macro.njk" import govukErrorSummary %}
{% from "hidden-fields/macro.njk" import appendHiddenFields %}

{% extends "layout.njk" %}

{% block content %}
  {% if errors["birth-or-adoption"] %}
    {{ govukErrorSummary({
      titleText: "There is a problem",
      errorList: [{
        text: errors["birth-or-adoption"],
        href: "#birth-or-adoption"
      }]
    }) }}
  {% endif %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
      <form method="POST">
        {% call appendHiddenFields(data) %}
          {{ govukRadios({
            idPrefix: "birth-or-adoption",
            name: "birth-or-adoption",
            fieldset: {
              legend: {
                text: "Are you having a child through birth or adoption?",
                isPageHeading: true,
                classes: "govuk-fieldset__legend--xl"
              }
            },
            hint: {
              text: "Shared parental leave and pay is available for both birth and adoptive parents."
            },
            errorMessage: {
              text: errors["birth-or-adoption"]
            } if errors["birth-or-adoption"],
            items: [
              {
                value: "birth",
                text: "Birth",
                checked: data["birth-or-adoption"] === "birth"
              },
              {
                value: "adoption",
                text: "Adoption",
                checked: data["birth-or-adoption"] === "adoption"
              }
            ]
          }) }}

          {{ govukButton({
            text: "Continue"
          }) }}

        {% endcall %}
      </form>
    </div>
  </div>
{% endblock %}