{% from "radios/macro.njk" import govukRadios %}
{% from "button/macro.njk" import govukButton %}

{% extends "layout.njk" %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">
    <form method="POST" action="birth-or-adoption">
      {{ govukRadios({
        idPrefix: 'birth-or-adoption',
        name: 'birth-or-adoption',
        fieldset: {
          legend: {
            text: 'Are you having a child through birth or adoption?',
            isPageHeading: true,
            classes: "govuk-fieldset__legend--xl"
          }
        },
        hint: {
          text: 'Shared parental leave and pay is available for both birth and adoptive parents.'
        },
        errorMessage: errors['birth-or-adoption'] if errors['birth-or-adoption'],
        items: [
          {
            value: 'birth',
            text: 'Birth'
          },
          {
            value: 'adoption',
            text: 'Adoption'
          }
        ]
      }) }}

      {{ govukButton({
        text: "Continue"
      }) }}
    </form>
  </div>
</div>

{% endblock %}