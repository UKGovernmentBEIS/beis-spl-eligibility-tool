{% from "back-link/macro.njk" import govukBackLink %}
{% from "table/macro.njk" import govukTable %}
{% from "hidden-fields/macro.njk" import appendHiddenFields %}
{% from "button/macro.njk" import govukButton %}

{% extends "layout.njk" %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back to " + data | startDateName,
    href: withData("start-date")
  }) }}
{% endblock %}

{% block pageTitle %}
  Plan leave and pay when you have a child
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">
        Check if you can get shared parental leave and pay
      </h1>

      <p>
        Choose which parent you want to check eligibility for below.
      </p>
      <p>
        Once you know what each parent can get, you can
        <a href="/shared-parental-leave-planner">plan how to take leave and pay</a>
        when you have a child.
      </p>

      {% set primaryTableCaption %}
        {{ data | primaryName | capitalize }}
      {% endset %}

      {% set secondaryTableCaption %}
        {{ data | secondaryName | capitalize }}
      {% endset %}

      {% set primaryCheckEligibilityButton %}
        {% set formaction = "results/" + data | primaryNameForUrl %}
        <button class="govuk-link--no-visited-state button-link" role="link" formaction="{{formaction}}">
          {{"Re-check" if data | hasCheckedEligibility("primary") else "Check" }} eligibility
        </button>
      {% endset %}

      {% set secondaryCheckEligibilityButton %}
        {% set formaction = "results/" + data | secondaryNameForUrl %}
        <button class="govuk-link--no-visited-state button-link" role="link" formaction="{{formaction}}">
          {{"Re-check" if data | hasCheckedEligibility("secondary") else "Check" }} eligibility
        </button>
      {% endset %}

      <form method="POST">
        {% call appendHiddenFields(data) %}
          {{ govukTable({
            caption: primaryTableCaption,
            head: [
              {
                text: "Shared parental leave"
              },
              {
                text: "Statutory shared parental pay"
              },
              {}
            ],
            rows: [
              [
                {
                  text: data | displayEligiblity("primary", "spl")
                },
                {
                  text: data | displayEligiblity("primary", "shpp")
                },
                {
                  html: primaryCheckEligibilityButton
                }
              ]
            ]
          }) }}

          {{ govukTable({
            caption: secondaryTableCaption,
            head: [
              {
                text: "Shared parental leave"
              },
              {
                text: "Statutory shared parental pay"
              },
              {}
            ],
            rows: [
              [
                {
                  text: data | displayEligiblity("secondary", "spl")
                },
                {
                  text: data | displayEligiblity("secondary", "shpp")
                },
                {
                  html: secondaryCheckEligibilityButton
                }
              ]
            ]
          }) }}


          {% set hasCheckedEligibility = data | hasCheckedEligibility("primary") or data | hasCheckedEligibility("secondary") %}
          {% if hasCheckedEligibility and data | coupleHasAnyInelligibility %}
            <p>
              To understand why you or your partner arenâ€˜t eligible for shared parental leave or shared parental pay, you can check the guidelines on
              {% if data | isBirth %}
              {# TODO fix href of these links #}
                <a href="/shared-parental-leave-and-pay/eligibility-for-birth-parents">eligibility for birth parents</a>.
              {% else %}
                <a href="/shared-parental-leave-and-pay/eligibility-for-adopters">eligibility for adopters</a>.
              {% endif %}
            </p>
          {% endif %}
        {% endcall %}

        {{ govukButton({
          text: "Continue to planner",
          attributes: {
            formaction: "planner"
          }
        }) }}

      </form>
    </div>
  </div>

{% endblock %}