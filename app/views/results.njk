{% from "back-link/macro.njk" import govukBackLink %}
{% from "table/macro.njk" import govukTable %}
{% from "hidden-fields/macro.njk" import appendHiddenFields %}
{% from "button/macro.njk" import govukButton %}

{% extends "layout.njk" %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back to " + data | startDateName,
    href: withData("start-date")
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">
        Check if you can get shared parental leave and pay
      </h1>
      <p>
        Choose which parent you want to check eligibility for below.
      </p>
      {% macro eligibilityButton(options) %}
        {% set formAction = '/' + (data | parentNameForUrl(options.parent)) + '/check-eligibility' %}
        <button class="govuk-link--no-visited-state button-link" role="link" formaction="{{ formAction }}">
          {{ "Re-check" if data | hasCheckedEligibility(options.parent) else "Check" }} eligibility
        </button>
      {% endmacro %}
      <form method="POST">
        {% call appendHiddenFields(data) %}
          {% for parent in ["primary", "secondary"] %}
            {{ govukTable({
              caption: data | parentName(parent) | capitalize,
              head: [
                {
                  text: "Shared parental leave"
                },
                {
                  text: "Statutory shared parental pay"
                },
                {
                  text: ""
                }
              ],
              rows: [
                [
                  {
                    text: data | eligibility(parent, "spl")
                  },
                  {
                    text: data | eligibility(parent, "shpp")
                  },
                  {
                    html: eligibilityButton({
                      parent: parent
                    })
                  }
                ]
              ]
            }) }}
          {% endfor %}
        {% endcall %}
      </form>
      <h2 class="govuk-heading-m">
        Next steps
      </h2>
      {% if data | coupleHasAnyIneligibility %}
        <p>
          To understand why you or your partner are not eligible for shared parental leave or shared parental pay, you can check the guidelines on
          {% if data | isBirth %}
          {# TODO fix href of these links #}
            <a href="/shared-parental-leave-and-pay/eligibility-for-birth-parents">eligibility for birth parents</a>.
          {% else %}
            <a href="/shared-parental-leave-and-pay/eligibility-for-adopters">eligibility for adopters</a>.
          {% endif %}
        </p>
      {% endif %}
      <p>
        {# TODO fix href of these links #}
        If you or your partner are eligible, you can
        <a href="/shared-parental-leave-planner">plan how to take shared parental leave and pay</a>.
      </p>
    </div>
  </div>
{% endblock %}
